{
    "version": "2.0.0",
    "tasks": [{
        "type": "shell",
        "label": "debug_config",
        "command": "cp",
        "args": [
            "configs/platform/config.debug.yaml",
            "pkg/config.yaml",
        ]
    },
    {
        "type": "shell",
        "label": "rm_trusted_data",
        "dependsOn": [
            "debug_config",
        ],
        "command": "rm",
        "args": [
            "-rf",
            "trusted-data",
        ]
    },
    {
        "type": "shell",
        "dependsOn": [
            "debug_config",
        ],
        "label": "clean_attestor",
        "command": "rm",
        "args": ["-rf",
             "attestation/attestor/platform",
        ]
    },
    {
        "type": "shell",
        "dependsOn": [
            "debug_config",
        ],
        "label": "clean_verifier",
        "command": "rm",
        "args": ["-rf",
             "attestation/verifier/platform",
        ]
    },
    {
        "type": "shell",
        "dependsOn": [
            "debug_config",
        ],
        "label": "attestor_init",
        "command": "make",
        "args": [
            "attestor-clean",
            "attestor-init"]
    },
    {
        "type": "shell",
        "dependsOn": [
            "debug_config",
        ],
        "label": "verifier_init",
        "command": "make",
        "args": [
            "verifier-clean",
            "verifier-init"]
    }]
}